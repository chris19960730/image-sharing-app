
  

      <div class="row">
         <% @images.each do |image| %>
        <div class="col-12 col-md-6 col-lg-4 mb-4">
            <div class="card" >
                <%= image_tag image.url, class: "card-img-top image-size" %>
                <div class="card-body">
                    <p class="card-text"><%= image.name %></p>
                </div>
            </div>
         
        </div>
         <% end %>
       </div>
   
