
<h1 class="text-center mt-4">Share image: <Strong><%= @image.name %></Strong></h1>





<div class="row justify-content-center mt-5">
        <div class="col-10">
       
        <%= form_with(url: share_path_path(@image), local: true) do %>
            
             <div class="my-3">
                <%= image_tag @image.url, class: "img-thumbnail mx-auto d-block image-size" %>
            </div>

            <div class="form-group row">
                <%= label_tag :email, "email address", class: "col-2" %>
                <div class="col-8">
                    <%= email_field :email, params[:email], autofocus: true, class: "form-control shadow rounded" %>
                </div>
                
            </div>
           
            

            <div class="form-group row justify-content-center">
                <%= submit_tag "Send email", class: "btn btn-outline-warning btn-lg shadow rounded" %>
            </div>

        <% end %>
    </div>
</div>

