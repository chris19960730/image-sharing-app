<%= render "error_messages/error_messages", obj: @image %>
<h1 class="text-center mt-4">Log in</h1>


<div class="row justify-content-center mt-5">
        <div class="col-10">
        <%= form_with model: @image, local: true do |f| %>
            <div class="form-group row">
                <%= f.label :name, class: "col-2" %>
                <div class="col-10">
                    <%= f.text_field :name, class: "form-control shadow rounded" %>
                </div>
            </div>
            <div class="form-group row">
                <%= f.label :url, class: "col-2" %>
                <div class="col-10">
                    <%= f.url_field :url, class: "form-control shadow rounded" %>
                    <small id="emailHelp" class="form-text text-muted">This should be the image full url,typically include the image filename</small>
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <%= f.submit "Post", class: "btn btn-outline-warning btn-lg shadow rounded" %>
            </div>

        <% end %>
    </div>
</div>

